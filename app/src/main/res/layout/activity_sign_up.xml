<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActivity"
    android:background="@color/neutral0"
    android:paddingLeft="@dimen/spacing_12dp"
    android:paddingRight="@dimen/spacing_12dp"
    >

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Họ"
                android:textColor="@color/neutral5"
                android:textSize="@dimen/font_heading1"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/neutral2"
                android:hint="Nhập họ"
                android:paddingLeft="@dimen/spacing_12dp"
                android:paddingTop="@dimen/spacing_16dp"
                android:paddingRight="@dimen/spacing_12dp"
                android:paddingBottom="@dimen/spacing_16dp"
                android:textColor="@color/neutral3"
                android:textColorHint="@color/neutral3"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/border_radius_10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Tên"
                android:textColor="@color/neutral5"
                android:textSize="@dimen/font_heading1"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lastNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/neutral2"
                android:hint="Nhập tên"
                android:paddingLeft="@dimen/spacing_12dp"
                android:paddingTop="@dimen/spacing_16dp"
                android:paddingRight="@dimen/spacing_12dp"
                android:paddingBottom="@dimen/spacing_16dp"
                android:textColor="@color/neutral3"
                android:textColorHint="@color/neutral3"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/border_radius_10dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Email"
            android:textColor="@color/neutral5"
            android:textSize="@dimen/font_heading1"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/neutral2"
            android:hint="Nhập email của bạn"
            android:paddingLeft="@dimen/spacing_12dp"
            android:paddingTop="@dimen/spacing_16dp"
            android:paddingRight="@dimen/spacing_12dp"
            android:paddingBottom="@dimen/spacing_16dp"
            android:textColor="@color/neutral3"
            android:textColorHint="@color/neutral3"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/border_radius_10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Số điện thoại"
            android:textColor="@color/neutral5"
            android:textSize="@dimen/font_heading1"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNumberTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/neutral2"
            android:hint="Nhập số điện thoại của bạn"
            android:paddingLeft="@dimen/spacing_12dp"
            android:paddingTop="@dimen/spacing_16dp"
            android:paddingRight="@dimen/spacing_12dp"
            android:paddingBottom="@dimen/spacing_16dp"
            android:textColor="@color/neutral3"
            android:textColorHint="@color/neutral3"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/border_radius_10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Mật khẩu"
            android:textColor="@color/neutral5"
            android:textSize="@dimen/font_heading1"
            android:textStyle="bold" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            android:hint="Nhập mật khẩu của bạn"
            app:hintAnimationEnabled="false"
            android:textColorHint="@color/neutral3"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordTxt"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/neutral2"
                android:paddingLeft="@dimen/spacing_12dp"
                android:paddingTop="@dimen/spacing_16dp"
                android:paddingRight="@dimen/spacing_12dp"
                android:paddingBottom="@dimen/spacing_16dp"
                android:textColor="@color/neutral3"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/border_radius_10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln4"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Giới tính"
            android:textColor="@color/neutral5"
            android:textSize="@dimen/font_heading1"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/maleRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:layout_marginEnd="@dimen/spacing_16dp"
                android:textColor="@color/neutral5"
                android:tag="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/femaleRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:tag="0"
                android:textColor="@color/neutral5"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </RadioGroup>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textStyle="bold"
        android:textSize="@dimen/font_heading1"
        android:backgroundTint="@color/primary"
        android:textColor="@color/neutral5"
        android:layout_marginTop="@dimen/spacing_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ln5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản?"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/neutral5"
            android:layout_marginEnd="4sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16dp"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>