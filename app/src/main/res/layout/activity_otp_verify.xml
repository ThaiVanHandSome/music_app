<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral0"
    tools:context=".activities.OtpVerifyActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/image_120dp"
            android:layout_height="@dimen/image_120dp"
            android:src="@drawable/social_media" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:layout_marginTop="12dp"
            android:textColor="@color/neutral5"
            android:textSize="@dimen/font_display"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="32dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/opt1Txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/neutral5"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/opt2Txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/neutral5"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/opt3Txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/neutral5"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/opt4Txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/neutral5"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/opt5Txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/neutral5"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/opt6Txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/neutral5"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/countdownTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#ffff0000"
            android:layout_marginTop="16dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="36dp"
            android:text="Verify"
            android:textStyle="bold"
            android:textColor="@color/neutral5"
            android:backgroundTint="@color/primary"
            android:textSize="24sp"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>